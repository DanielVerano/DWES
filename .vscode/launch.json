    "version": "0.2.0",
    "configurations": [
        {
            "type": "node", 
            "request": "launch",
            "name": "Launch Nodemon",
            "runtimeExecutable": "${workspaceFolder}/4-NodeJS/miniblog/node_modules/nodemon/bin/nodemon.js",
            "program": "${workspaceFolder}/4-NodeJS/miniblog/bin/www",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "debug": "app:*",
            },
            "envFile": "${workspaceFolder}/4-NodeJS/miniblog/.env",
        }
    ]
}